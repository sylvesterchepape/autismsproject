<body>
  <nav class="navbar navbar-expand-lg fixed-top nav-tabs nav-border bg-extra-static">
    <div class="container">
    <a class="navbar-brand brand-nav" href="\">pilc</a>
    <button class="navbar-toggler text-light bg-border" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      Menu <span class="navbar-toggler-icon 
       my-2"></span>
    </button>
  
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto">
        <% if(currentUser){%>
        <li class="nav-item active">

          <a class="nav-link text-light nav-color text-link" href="/course/new">be a teacher </a>
        </li>
        <% }else{%>
        <li class="nav-item">
          <a class="nav-link text-light text-link " href="#">Blog</a>
        </li>
        <li class="nav-item">
          <a class="nav-link nav-color text-light text-link" href="#" >Features</a>
        </li>
        
       
        <li class="nav-item">
          <a class="nav-link nav-color text-light text-link" href="#" >Resource</a>
        </li>
        <li class="nav-item">
          <a class="nav-link nav-color text-light text-link" href="#" >Client</a>
        </li>
        <li class="nav-item">
          <a class="nav-link nav-color text-light text-link" href="/contact" >Contact</a>
        </li>
        <%}%>
      </ul>
      
      <div class="dropdown-divider"></div>
      <% if(!currentUser){%>
        <form class="form-inline">
          <a class="btn btn-outline-secondary" href="/login">sign/signup</a>
        </form>
      </div>
      <% }else{%>
        <ul class="nav navbar-nav navbar-right">
          <div class="dropdown-divider"></div>
          <li class="nav-item">
            <a class="nav-link mx-2 sm-text-dark text-light " href="#">signed as <%= currentUser.username%>
            </a>
        </li>
        <div class="dropdown-divider"></div>
          <li class="nav-item">
            <a class="nav-link mx-2 text-light" href="/logout">logout
            </a>
          </li>
        </ul>
        <%}%>
    </div>
    </nav>
 
  <hr class="shadow">
  <div class="container">
    <div class="below-nav mb-2">
  <% if(success && success.length) {%>

    <div class="alert alert-success alert-dismissible fade show " role="alert">
        <%= success %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <% } %>
    
    <% if(error && error.length) {%>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <% } %>
  </div>
  </div>