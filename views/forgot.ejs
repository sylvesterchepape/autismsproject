<div class="container below-nav">
    <a href="/login"><i class="fa fa-arrow-left" aria-hidden="true"></i></a>
<div class="row">
	<div class="col-md-12">
		<form action="/forgot" method="POST" class="validated-form" novalidate>
			<legend>Forgot Password</legend>
			<div class="form-group">
				<label for="email">Email</label>
				<input type="email" name="email" autofocus class="form-control" placeholder="comfirm your email" required>
				<div class="invalid-feedback">
					Please enter your valid email address
				  </div>
			</div>
			<div class="form-group">
				<input type="submit" class="btn btn-primary" value="Reset Password">
			</div>
		</form>
	</div>
</div>
</div>







